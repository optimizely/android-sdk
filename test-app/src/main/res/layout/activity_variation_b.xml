<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_variation_b"
    android:background="@drawable/ic_background_varib_marina"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_vertical"
    tools:context="com.optimizely.ab.android.test_app.VariationBActivity">
    <TextView
        android:id="@+id/tv_variation_b_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="150dp"
        android:text="B"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/tv_variation_b_text_2"
        android:layout_below="@+id/tv_variation_b_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:text="variation"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="30dp"
        android:layout_centerVertical="true"/>
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_variation_b_text_2"
        android:name="com.optimizely.ab.android.test_app.ConversionFragment"
        tools:layout="@layout/fragment_conversion" />
</RelativeLayout>
